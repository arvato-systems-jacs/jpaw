                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>javach</id>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <phase>compile</phase>
                                <configuration>
                                    <executable>javac</executable>
                                    <arguments>
                                        <argument>-classpath</argument>
                                        <argument>${project.build.outputDirectory}</argument>
